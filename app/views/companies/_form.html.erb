<%= form_for(@company, :remote => local_assigns[:remote]) do |f| %>
  <%= error_explanation @company %>
    
  <div class="form-group">
    <%= f.label :name, :class => 'control-label' %>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit :class => 'btn btn-primary'  %>
  </div>
<% end %>
